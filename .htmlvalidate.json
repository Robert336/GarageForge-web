{
  "extends": ["html-validate:recommended"],
  "rules": {
    "close-order": "error",
    "void-style": ["error", { "style": "omit" }],
    "class-pattern": ["error", { "pattern": "^[a-z]([a-z0-9-]*[a-z0-9])?(__[a-z]([a-z0-9-]*[a-z0-9])?)?(--[a-z]([a-z0-9-]*[a-z0-9])?)?$" }],
    "id-pattern": ["error", { "pattern": "kebab-case" }],
    "require-sri": "off",
    "no-trailing-whitespace": "error"
  },
  "elements": [
    "html5"
  ]
}